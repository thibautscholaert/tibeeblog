---
import ThemeToggle from './ThemeToggle.astro';
---

<header class="fixed top-0 left-0 right-0 z-50 backdrop-blur-md bg-tech-dark/90 dark:bg-tech-dark/90 light:bg-tech-light/90 border-b border-metal-gray/30 transition-colors duration-300">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <div class="logo-container flex items-center">
      <a href="/" class="flex items-center">
        <div class="text-2xl font-mono font-bold bg-gradient-to-r from-neon-blue to-neon-purple text-transparent bg-clip-text">
          TIBEE<span class="text-neon-blue">TECH</span>
        </div>
      </a>
    </div>
    
    <nav class="hidden md:flex items-center space-x-2">
      <a href="/" class="nav-link scanline-effect">Blog</a>
      <a href="/about" class="nav-link scanline-effect">À propos</a>
      <a href="/contact" class="nav-link scanline-effect">Contact</a>
      <ThemeToggle />
    </nav>
    
    <button id="mobile-menu-btn" class="md:hidden text-tech-light p-2" aria-label="Toggle menu">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-tech-darker border-b border-metal-gray/50">
    <div class="container mx-auto px-4 py-3">
      <nav class="flex flex-col space-y-4 py-4">
        <a href="/" class="nav-link text-lg">Blog</a>
        <a href="/about" class="nav-link text-lg">À propos</a>
        <a href="/contact" class="nav-link text-lg">Contact</a>
        <div class="flex justify-center pt-4">
          <ThemeToggle />
        </div>
      </nav>
    </div>
  </div>
</header>

<script>
  // Handle mobile menu toggle
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  if (mobileMenuBtn && mobileMenu) {
    mobileMenuBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>